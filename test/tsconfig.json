{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "../node_modules/*", "../src/*"]
    }
  },
  "include": ["./**/*"]
}
